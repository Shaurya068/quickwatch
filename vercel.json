{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "rm -rf public && cp -r client/dist public",
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "client/dist/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ]
}