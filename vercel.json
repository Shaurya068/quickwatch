{
  "version": 2,
  "installCommand": "npm ci && npm --prefix client ci",
  "buildCommand": "npm --prefix client run build && rm -rf public && cp -r client/dist public",
  "outputDirectory": "public",
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "client/dist/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "server/server.js" }
  ]
}

